<body>
  <div class="container-fluid">
    <div class="row justify-content-center" style="height: 100%">
      <div class="col-md-3 order-sm-12">
        <div class="card fixer" style="box-shadow: 0 1px 3px 0 rgba(0,0,0,0.2),0 1px 1px 0 rgba(0,0,0,0.14),0 2px 1px -1px rgba(0,0,0,0.12); margin-bottom: 50px; ">
          <h3 class="text-center" style="padding: 20px 0;">ADD NEW CUSTOMER</h3>
          <div class="card-body">
            <div class="form-group">
              <label for="Description">Name</label>
              <input class="form-control" id="name" rows="5"></input>
            </div>
            <br>
            <br>
            <div class="form-group">
                    <label for="Description">Product purchased</label>
                    <input class="form-control" id="product_purchased" rows="5"></input>
                  </div>
                  <div class="form-group">
                      <label for="Description">Mobile No</label>
                      <input class="form-control" id="mobile" rows="5"></input>
                    </div>      
                  <br>
                  <br>
                <br>
            <br>
            <button onclick="submit_customer()" class="btn btn-primary" style="width:100%;">Add Customer</button>

          </div>
        </div>
      </div>
      
</body>
<script>
  var database = firebase.database();

  function submit_customer(){
    var name = document.getElementById('name').value;
    var mobile = document.getElementById('mobile').value;
    var product_purchased = document.getElementById('product_purchased').value;

   firebase.database().ref('users/').push({
    name:name,
    mobile:mobile,
    product_purchased:product_purchased
  });
  }
