  <title>All Customers currently in store</title>

</head>

<body style="background: #212121; font-family: 'Roboto Condensed', sans-serif;">
       
    <% for (var key in customers) { %>
       
        <%if (customers.hasOwnProperty(key)) { %>           
            <div style="color:aliceblue"><%= key%>:<%= customers[key] %></div>
            <button onclick="Attend('<%=key%>','<%=customers[key]%>')">Attend</button>
        <% }}%>

</body>
<script>

  var database = firebase.database();
  function Attend(customer,customerKey){
    firebase.database().ref('being-attended/').push({
    customer:customerKey
    });
    firebase.database().ref('to-be-attended/').child(customer).remove(function () {
    console.log("removed")
    location.href = 'http://localhost:4000/customer/'+customerKey;
  });
  }  
</script>

</html>